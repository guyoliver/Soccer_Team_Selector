<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:name="com.guyoliver.guyoliverteam.soccerteamselector.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.guyoliver.guyoliverteam.soccerteamselector.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.guyoliver.guyoliverteam.soccerteamselector.PlayersActivity" />
        <activity android:name="com.guyoliver.guyoliverteam.soccerteamselector.ViewAllPlayersActivity" />
        <activity android:name="com.guyoliver.guyoliverteam.soccerteamselector.SelectPlayersForNextMatch" />
        <activity android:name="com.guyoliver.guyoliverteam.soccerteamselector.SelectionNextMatchResults" />
        <activity android:name="com.guyoliver.guyoliverteam.soccerteamselector.Settings"></activity>
    </application>

</manifest>